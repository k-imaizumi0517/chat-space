.chat
  .header
    .left-header
      .left-header__title
        test
      %ul.left-header__members
        Member:
        %li.member
          test
    .right-header
      = link_to "Edit", "#", class: 'right-header__button'
  .messages
    .message
      .upper-message
        .upper-message__user_name test
        .upper-message__date 2018/09/07 06:11
      .lower-message
        %p.lower-message__content test
  .form
    %form
      %input.form__message{type: "text", placeholder: "type a message"}
      .form__mask
        %label.form__mask__image
          %i.fa.fa-picture-o.icon
          %input.hidden{type: "file"}
      %input.form__submit{type: "submit", value: "Send"}
